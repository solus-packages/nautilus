From 273b0380c0f15c00b6b5c0180e081ae3ac003758 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Sun, 22 Jan 2017 21:48:19 +0000
Subject: [PATCH] Apply sane Solus defaults

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 data/org.gnome.nautilus.gschema.xml | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/data/org.gnome.nautilus.gschema.xml b/data/org.gnome.nautilus.gschema.xml
index 17982cc..cc6a8c3 100644
--- a/data/org.gnome.nautilus.gschema.xml
+++ b/data/org.gnome.nautilus.gschema.xml
@@ -96,7 +96,7 @@
       <description>Filter the search dates using either last used or last modified.</description>
     </key>
     <key type="b" name="show-delete-permanently">
-      <default>false</default>
+      <default>true</default>
       <summary>Whether to show a context menu item to delete permanently</summary>
       <description>If set to true, then Nautilus will show a delete permanently context menu item to bypass the Trash.</description>
     </key>
@@ -228,7 +228,7 @@
       <description>A list of captions below an icon in the icon view and the desktop. The actual number of captions shown depends on the zoom level. Some possible values are: "size", "type", "date_modified", "owner", "group", "permissions", and "mime_type".</description>
     </key>
     <key name="default-zoom-level" enum="org.gnome.nautilus.CanvasZoomLevel">
-      <default>'large'</default>
+      <default>'small'</default>
       <summary>Default icon zoom level</summary>
       <description>Default zoom level used by the icon view.</description>
     </key>
-- 
